echo_grey()   { echo -e "\033[01;30m$*\033[00m"; }
echo_red()    { echo -e "\033[01;31m$*\033[00m"; }
echo_green()  { echo -e "\033[01;32m$*\033[00m"; }
echo_yellow() { echo -e "\033[01;33m$*\033[00m"; }
echo_blue()   { echo -e "\033[01;34m$*\033[00m"; }
echo_pink()   { echo -e "\033[01;35m$*\033[00m"; }
echo_cyan()   { echo -e "\033[01;36m$*\033[00m"; }
echo_white()  { echo -e "\033[01;37m$*\033[00m"; }

